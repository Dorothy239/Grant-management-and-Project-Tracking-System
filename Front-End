<script>
/* =====================================================
   PAGE / TAB SWITCHING
===================================================== */
const tabs = document.querySelectorAll(".tab");
const pages = document.querySelectorAll(".page");

tabs.forEach(tab => {
  tab.addEventListener("click", () => {
    tabs.forEach(t => t.classList.remove("active"));
    pages.forEach(p => p.classList.remove("active"));

    tab.classList.add("active");
    document.getElementById(tab.dataset.page).classList.add("active");
  });
});


/* =====================================================
   NEW TASK MODAL LOGIC
===================================================== */
const modal = document.getElementById("taskModal");
const newTaskBtn = document.getElementById("newTaskBtn");
const cancelTaskBtn = document.getElementById("cancelTask");
const addTaskBtn = document.getElementById("addTask");

const taskTitle = document.getElementById("taskTitle");
const taskDesc = document.getElementById("taskDesc");

let selectedPriority = "low";

/* Open modal */
newTaskBtn.addEventListener("click", () => {
  modal.classList.add("active");
});

/* Close modal */
cancelTaskBtn.addEventListener("click", () => {
  modal.classList.remove("active");
  resetModal();
});

/* Priority buttons */
document.querySelectorAll(".priority button").forEach(btn => {
  btn.addEventListener("click", () => {
    document
      .querySelectorAll(".priority button")
      .forEach(b => b.classList.remove("active"));

    btn.classList.add("active");
    selectedPriority = btn.dataset.priority;
  });
});

/* Add new task */
addTaskBtn.addEventListener("click", () => {
  if (taskTitle.value.trim() === "") return;

  const taskCard = document.createElement("div");
  taskCard.className = `task-card ${selectedPriority}`;
  taskCard.innerHTML = `
    <h4>${taskTitle.value}</h4>
    <p>${taskDesc.value}</p>
  `;

  document.getElementById("todo").appendChild(taskCard);
  updateCounts();
  modal.classList.remove("active");
  resetModal();
});

/* Reset modal inputs */
function resetModal() {
  taskTitle.value = "";
  taskDesc.value = "";
  selectedPriority = "low";
  document
    .querySelectorAll(".priority button")
    .forEach(b => b.classList.remove("active"));
}


/* =====================================================
   UPDATE COLUMN COUNTS
===================================================== */
function updateCounts() {
  document.querySelectorAll(".column").forEach(column => {
    const count = column.querySelectorAll(".task-card").length;
    column.querySelector(".count").textContent = count;
  });
}


/* =====================================================
   BUDGET PAGE CHARTS (KEPT FROM OLD JS)
===================================================== */
if (document.getElementById("barChart")) {
  new Chart(document.getElementById("barChart"), {
    type: "bar",
    data: {
      labels: ["Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
      datasets: [
        {
          label: "Income",
          data: [45000, 52000, 48000, 56000, 59000, 62000],
          backgroundColor: "#22c55e"
        },
        {
          label: "Expenses",
          data: [18000, 20000, 22000, 21000, 26000, 30000],
          backgroundColor: "#ef4444"
        }
      ]
    }
  });
}

if (document.getElementById("pieChart")) {
  new Chart(document.getElementById("pieChart"), {
    type: "pie",
    data: {
      labels: ["Marketing", "Operations", "Technology", "HR"],
      datasets: [{
        data: [40, 25, 20, 15],
        backgroundColor: ["#f59e0b", "#3b82f6", "#22c55e", "#a855f7"]
      }]
    }
  });
}
</script>


